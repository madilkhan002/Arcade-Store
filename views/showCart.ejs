<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khawahishaat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/gamedetails.css">
    <link rel="stylesheet" href="/styles/viewgames.css">
    <link rel="shortcut icon" href="https://media.direct.playstation.com/is/image/sierialto/favicon?fmt=png-alpha"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <style>
        .game-card{
            padding: 1em;
        }
        .main{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            width: 100vw;
        }        
    </style>
</head>
<body>
    <%- include('partials/navbarUser') %>
    <br><br><br>

    <h1 style="text-align: center; padding-top: 0.5em;">Cart</h1>
<br><br>

    <% for(let i = 0; i < data.length; i=i+5){ %>

            <div class="main">
                <% if(i < data.length ){ %>
                    <div class="card3d game-card">
                        <img src="/images/<%= data[i].id %>.jpeg" alt="Plains" width="200"> 
                        <a href="/buycart/<%= data[i].id %>">
                            <button class="buy-button">Buy</button>
                        </a>
                        <a href="/removecart/<%= data[i].id %>">
                            <button class="buy-button">Remove</button>
                        </a>
                        <h3 style="font-weight: 400;"><%= data[i]._name %></h3>
                    </div>
                <% } %>

                <% if(i + 1 < data.length ){ %>
                    <div class="card3d game-card">
                        <img src="/images/<%= data[i+1].id %>.jpeg" alt="Plains" width="200"> 
                        <a href="/buycart/<%= data[i+1].id %>">
                            <button class="buy-button">Buy</button>
                        </a>
                        <a href="/removecart/<%= data[i+1].id %>">
                            <button class="buy-button">Remove</button>
                        </a>
                        <h3 style="font-weight: 400;"><%= data[i+1]._name %></h3>
                    </div>
                <% } %>

                <% if( i + 2 < data.length ){ %>
                    <div class="card3d game-card">
                        <img src="/images/<%= data[i+2].id %>.jpeg" alt="Plains" width="200"> 
                        <a href="/buycart/<%= data[i+2].id %>">
                            <button class="buy-button">Buy</button>
                        </a>
                        <a href="/removecart/<%= data[i+2].id %>">
                            <button class="buy-button">Remove</button>
                        </a>
                        <h3 style="font-weight: 400;"><%= data[i+2]._name %></h3>
                    </div>
                <% } %>

                <% if( i + 3 < data.length ){ %>
                    <div class="card3d game-card">
                        <img src="/images/<%= data[i+3].id %>.jpeg" alt="Plains" width="200"> 
                        <a href="/buycart/<%= data[i+3].id %>">
                            <button class="buy-button">Buy</button>
                        </a>
                        <a href="/removecart/<%= data[i+3].id %>">
                            <button class="buy-button">Remove</button>
                        </a>
                        <h3 style="font-weight: 400;"><%= data[i+3]._name %></h3>
                    </div>
                <% } %>

                <% if( i + 4 < data.length ){ %>
                    <div class="card3d game-card">
                        <img src="/images/<%= data[i+4].id %>.jpeg" alt="Plains" width="200"> 
                        <a href="/buycart/<%= data[i+4].id %>">
                            <button class="buy-button">Buy</button>
                        </a>
                        <a href="/removecart/<%= data[i+4].id %>">
                            <button class="buy-button">Remove</button>
                        </a>
                        <h3 style="font-weight: 400;"><%= data[i+4]._name %></h3>
                    </div>
                <% } %>

            </div>

            
    <% } %>


</body>
</html>