<style>
.pagination{
  margin-top: -4em;
  margin-left: 18em;
}

.page-link{
    outline: 0;
    border: 0;
    width: 3rem;
    text-align: center;
  }
  .page-link:hover{
    color: black;
  }
</style>

<!-- pager partial  -->
<% if( catagory == 'null' ){ %>
  <div class="pagination-div">
    <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-5 temp">
        <ul class="pagination">
          <!-- index  -->
        <% for(let i = 1;i <= totalPages ;i++){  %>
            <%if(i == currPage){%>
            <li  class="page-item"><a class="page-link active" href="/<%=path %>/<%= i%>"><%= i %></a></li>
            <%} else {%>
             <li class="page-item"><a class="page-link" href="/<%=path %>/<%= i%>"><%= i %></a></li>
             <% } %>
        <% } %>
        </ul>
      </nav>
</div>
<% }else{ %>
    
  <div class="pagination-div">
  <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-5 temp">
        <ul class="pagination">
          <!-- index  -->
        <% for(let i = 1;i <= totalPages ;i++){  %>
            <%if(i == currPage){%>
            <li  class="page-item"><a class="page-link active" href="/<%=path %>/<%= catagory%>/<%= i%>"><%= i %></a></li>
            <%} else {%>
             <li class="page-item"><a id="dest" onclick="fun()" class="page-link" href="/<%=path %>/<%= catagory%>/<%= i%>"><%= i %></a></li>
             <% } %>
        <% } %>
        </ul>
      </nav>
  </div>
<% } %>
